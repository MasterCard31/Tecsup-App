<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        app:tint="@color/tecsup"
        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        />

    <Button
        android:id="@+id/btnNoticias"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#00abfb"
        android:text="NOTICIAS TECSUP"

        />

    <Button
        android:id="@+id/btnRegCurso"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/azul_620"
        android:text="REGISTRAR CURSO"

        />

    <Button
        android:id="@+id/btnRegDocente"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/azul_620"
        android:text="REGISTRAR DOCENTE"

        />

    <Button
        android:id="@+id/btnRegEstudiante"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#e0e0e0"
        android:text="REGISTRAR ESTUDIANTE"

        />

    <Button
        android:id="@+id/btnRegNotas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#e0e0e0"
        android:text="REGISTRAR NOTAS" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="40dp"
       android:gravity="end"

       >

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/fabWeb"
           android:layout_width="60dp"
           android:layout_height="60dp"

           app:tint="@color/verde_83"

           />

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/imageVe"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginStart="10dp"

           />

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/image"
           android:layout_width="60dp"
           android:layout_height="60dp"

           app:tint="@color/verde_83"
           android:layout_marginStart="10dp"

           />

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/btnNoticia"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginStart="10dp"
           app:tint="@color/verde_83"
           />


   </LinearLayout>

</LinearLayout>