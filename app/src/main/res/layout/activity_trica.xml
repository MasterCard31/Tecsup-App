<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:text="@string/sistema_evaluacion"
        android:textColor="@color/verde_4ae"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/evaluacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/evaluacion"
        android:padding="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/evaluacion"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/sistema_evaluacion"
            android:textColor="@color/verde_4ae"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="@string/prom"
            android:textColor="@color/verde_4ae"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="@string/practicaOne"
            android:textColorHint="@color/nav_lila_bf8"
            android:textSize="17sp"

            />

        <EditText
            android:id="@+id/practicaTeo1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center"
            android:inputType="number"
            android:maxLength="2"

            />
    </LinearLayout>

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="@string/practicaTwo"
            android:textColorHint="@color/nav_lila_bf8"
            android:textSize="17sp"

            />

        <EditText
            android:id="@+id/practicaTeo2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center"
            android:hint=""
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:background="@color/verde_83" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/sistema_evaluacion"
            android:textColor="@color/verde_4ae"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="@string/prom"
            android:textColor="@color/verde_4ae"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="@string/practicaOne"
            android:textColorHint="@color/nav_lila_bf8"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/practicaLab1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center"
            android:hint=""
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="@string/practicaTwo"
            android:textColorHint="@color/nav_lila_bf8"
            android:textSize="17sp"

            />

        <EditText
            android:id="@+id/practicaLab2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center"
            android:hint=""
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="@string/practicaThree"
            android:textColorHint="@color/nav_lila_bf8"
            android:textSize="17sp"

            />

        <EditText
            android:id="@+id/practicaLab3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center"
            android:hint=""
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="@string/practicaFour"
            android:textColorHint="@color/nav_lila_bf8"
            android:textSize="17sp"

            />

        <EditText
            android:id="@+id/practicaLab4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center"
            android:hint=""
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/promedio"
            android:textColor="@color/nav_celeste_ab"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultadoTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="20dp"
            android:text="----"
            android:textColor="@color/nav_celeste_ab"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCalcularPromedio"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/azul_620"
            android:text="Calcular"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>